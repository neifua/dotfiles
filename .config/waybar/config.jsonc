{
  "layer": "bottom",
  "position": "bottom",
  "mod": "dock",
  "exclusive": true,
  "passthrough": false,
  "gtk-layer-shell": true,

  "modules-left": ["wlr/taskbar"],
  "modules-center": [],
  "modules-right": [
    "cpu",
    "memory",
    "pulseaudio",
    "backlight",
    "battery",
    "tray",
    "clock",
    "custom/notification",
  ],

  "wlr/taskbar": {
    "format": "{icon} {app_id}",
    "markup": true,
    "icon-theme": "Adwaita",
    "icon-size": 22,
    "on-click": "activate",
  },

  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-bluetooth": " {volume}%",
    "format-muted": " {volume}%",
    "format-icons": ["", "", ""],
    "states": {
      "normal": 60,
      "warning": 100,
      "critical": 154,
    },
    "on-click-right": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
    "on-click": "pavucontrol",
  },

  "battery": {
    "interval": 1,
    "states": {
      "warning": 30,
      "critical": 15,
    },
    "format": "{icon} {capacity}%",
    "format-icons": {
      "charging": ["<span foreground='#f6c177'>🔌</span>"],
      "discharging": ["󰂎", "󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"],
    },
    "tooltip": false,
  },

  "backlight": {
    "format": "{icon} {percent}%",
    "format-icons": ["🌕", "🌔", "🌓", "🌒", "🌑"],
  },

  "clock": {
    "format": "{:>%I:%M %p \n %d/%m/%Y}",
    "interval": 1,
    "align": 1,
    "justify": "right",
    "tooltip": false,
  },

  "tray": {
    "icon-size": 19,
    "spacing": 8,
  },

  "cpu": {
    "interval": 1,
    "format": " {usage}%",
    "tooltip": false,
  },

  "memory": {
    "interval": 1,
    "format": " {used} GiB",
    "tooltip": false,
  },

  "custom/notification": {
    "tooltip": true,
    "format": "{icon}",
    "format-icons": {
      "notification": "<span foreground='#eb6f92'>󱅫</span>",
      "none": "<span foreground='#e0def4'></span>",
      "dnd-notification": "<span foreground='#6e6a86'>󱅫</span>",
      "dnd-none": "<span foreground='#6e6a86'></span>",
      "inhibited-notification": "<span foreground='#ebbcba'>󱅫</span>",
      "inhibited-none": "<span foreground='#ebbcba'></span>",
      "dnd-inhibited-notification":
        "span foreground='#9ccfd8'>󱅫</span>",
      "dnd-inhibited-none": "<span foreground='#9ccfd8'></span>"
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "sleep 0.1 && swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": false
    },
  }
}
