{
  "layer": "bottom",
  "position": "bottom",
  "mod": "dock",
  "exclusive": true,
  "passthrough": false,
  "gtk-layer-shell": true,

  "modules-left": ["wlr/taskbar"],
  "modules-center": [],
  "modules-right": [
    "network",
    "cpu",
    "memory",
    "pulseaudio",
    "backlight",
    "battery",
    "tray",
    "clock",
    "custom/notification",
  ],

  "network": {
    "interval": 1,
    "format": "{icon}",
    "format-icons": ["Û∞§Ø", "Û∞§ü", "Û∞§¢", "Û∞§•", "Û∞§®"],
    "format-ethernet": "ÓΩÑ",
    "format-disconnected": "Û±òñ",
    "format-disabled": "Û∞§≠",
    "on-click": "kitty bash -c nmtui-connect",
    "on-click-right": "nmcli device status | grep wlp0s20f3 | grep -q connected && nmcli device disconnect wlp0s20f3 || nmcli device connect wlp0s20f3",
    "tooltip": false,
  },

  "wlr/taskbar": {
    "format": "{icon}   {app_id}",
    "markup": true,
    "icon-theme": "Adwaita",
    "icon-size": 22,
    "on-click": "activate",
  },

  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-bluetooth": "Ôäì {volume}%",
    "format-muted": "Óª® {volume}%",
    "format-icons": [
      "ÔÄ¶",
      "ÔÄ¶",
      "ÔÄß",
      "ÔÄß",
      "ÔÄß",
      "<span foreground='#ebbcba'>ÔÄß</span>",
      "<span foreground='#ebbcba'>ÔÄß</span>",
      "<span foreground='#ebbcba'>ÔÄß</span>",
      "<span foreground='#ebbcba'>ÔÄ®</span>",
      "<span foreground='#eb6f92'>ÔÄ®</span>",
    ],
    "states": {
      "normal": 60,
      "warning": 100,
      "critical": 154,
    },
    "on-click-right": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
    "on-click": "pavucontrol",
    "tooltip": false,
  },

  "battery": {
    "interval": 1,
    "states": {
      "warning": 30,
      "critical": 10,
    },
    "format": "{icon} {capacity}%",
    "format-icons": {
      "charging": ["<span foreground='#f6c177'>üîå</span>"],
      "discharging": [
        "<span foreground='#eb6f92'>Û∞Å∫</span>",
        "<span foreground='#ebbcba'>Û∞Åª</span>",
        "<span foreground='#ebbcba'>Û∞Åº</span>",
        "Û∞ÅΩ",
        "Û∞Åæ",
        "Û∞Åø",
        "Û∞ÇÄ",
        "Û∞ÇÅ",
        "Û∞ÇÇ",
        "Û∞Åπ",
      ],
    },
    "tooltip": false,
  },

  "backlight": {
    "format": "{icon} {percent}%",
    "format-icons": ["üåï", "üåî", "üåì", "üåí", "üåë"],
    "tooltip": false,
  },

  "clock": {
    "format": "{:>%I:%M %p \n %d/%m/%Y}",
    "interval": 1,
    "align": 1,
    "justify": "right",
    "tooltip": false,
  },

  "tray": {
    "icon-size": 18,
    "spacing": 8,
  },

  "cpu": {
    "interval": 1,
    "format": "Ôíº {usage}%",
    "tooltip": false,
  },

  "memory": {
    "interval": 1,
    "format": "ÓøÖ {used} GiB",
    "tooltip": false,
  },

  "custom/notification": {
    "tooltip": true,
    "format": "{icon}",
    "format-icons": {
      "notification": "<span foreground='#eb6f92'>Û±Ö´</span>",
      "none": "<span foreground='#e0def4'>ÔÉ≥</span>",
      "dnd-notification": "<span foreground='#908caa'>Û±Ö´</span>",
      "dnd-none": "<span foreground='#6e6a86'>ÔÉ≥</span>",
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "sleep 0.1 && swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": false,
  },
}
